{
	"name": "@paperless/react",
	"sideEffects": false,
	"version": "2.0.1-beta.166",
	"description": "React specific wrapper for component-library",
	"repository": {
		"type": "git",
		"url": "https://github.com/ionic-team/ionic.git"
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org"
	},
	"scripts": {
		"prebuild": "yarn",
		"build": "yarn clean && yarn compile",
		"build:prod": "yarn build",
		"clean": "rm -rf dist",
		"compile": "yarn tsc",
		"tsc": "tsc -p . --outDir ./dist",
		"rollup": "rollup -c",
		"preyarn:publish": "cp ../../README.md .",
		"yarn:publish": "yarn publish",
		"prettier:check": "yarn prettier \"./src/**/*.{ts,tsx,html,scss,json}\"",
		"prettier:write": "yarn prettier:check -w"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"devDependencies": {
		"@types/jest": "^29.5.14",
		"@types/node": "^22.13.5",
		"jest": "^29.7.0",
		"jest-dom": "4.0.0",
		"np": "8.0.2",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"typescript": "5.5.3"
	},
	"peerDependencies": {
		"react": "^17.0.2 || ^18.0.0",
		"react-dom": "^17.0.2 || ^18.0.0"
	},
	"jest": {
		"preset": "ts-jest",
		"setupTestFrameworkScriptFile": "<rootDir>/jest.setup.js",
		"testPathIgnorePatterns": [
			"node_modules",
			"dist"
		]
	}
}
