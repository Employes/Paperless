{
	"name": "@paperless/react",
	"sideEffects": false,
	"version": "3.2.2",
	"description": "React specific wrapper for component-library",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Employes/Paperless.git"
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org"
	},
	"scripts": {
		"prebuild": "yarn",
		"build": "yarn clean && yarn compile",
		"build:prod": "yarn build",
		"clean": "rm -rf dist",
		"compile": "yarn tsc",
		"tsc": "tsc -p . --outDir ./dist",
		"rollup": "rollup -c",
		"prenpm:publish": "cp ../../README.md .",
		"npm:publish": "npm publish",
		"npm:publish:prerelease": "yarn npm:publish --tag alpha",
		"prettier:check": "yarn prettier \"./src/**/*.{ts,tsx,html,scss,json}\"",
		"prettier:write": "yarn prettier:check -w"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"devDependencies": {
		"@types/node": "~25.0.9",
		"@types/react": "~19.2.8",
		"react": "~19.2.3",
		"react-dom": "~19.2.3",
		"typescript": "5.9.3"
	},
	"peerDependencies": {
		"react": "^18.0.0 || ^19.0.0",
		"react-dom": "^18.0.0 || ^19.0.0"
	},
	"jest": {
		"preset": "ts-jest",
		"setupTestFrameworkScriptFile": "<rootDir>/jest.setup.js",
		"testPathIgnorePatterns": [
			"node_modules",
			"dist"
		]
	}
}
