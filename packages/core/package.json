{
    "name": "@paperless/core",
    "version": "0.1.0-alpha.408",
    "description": "Stencil Component Starter",
    "main": "dist/index.cjs.js",
    "module": "dist/index.js",
    "es2015": "dist/esm/index.mjs",
    "es2017": "dist/esm/index.mjs",
    "types": "dist/types/index.d.ts",
    "collection": "dist/collection/collection-manifest.json",
    "collection:main": "dist/collection/index.js",
    "unpkg": "dist/paperless/paperless.esm.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/ionic-team/stencil-component-starter.git"
    },
    "files": [
        "dist/",
        "loader/",
        "hydrate/"
    ],
    "publishConfig": {
        "registry": "https://registry.npmjs.org"
    },
    "scripts": {
        "build": "stencil build --docs",
        "build:prod": "stencil build",
        "postbuild": "yarn tailwind:process",
        "postbuild:prod": "yarn tailwind:process",
        "tailwind:process": "tailwindcss -c ./src/tailwind.config.js -i dist/paperless/paperless.css -o dist/paperless/paperless.css",
        "tailwind:process:watch": "yarn tailwind:process --watch",
        "watch": "stencil build --watch",
        "watch:both": "concurrently \"yarn watch\" \"yarn tailwind:process:watch\"",
        "watch:bg": "(yarn watch:both&)",
        "start": "stencil build --dev --watch --serve",
        "test": "stencil test --spec --e2e",
        "watch:test": "stencil test --spec --e2e --watchAll",
        "generate": "stencil generate",
        "preyarn:publish": "cp ../../README.md .",
        "yarn:publish": "yarn publish"
    },
    "dependencies": {
        "@popperjs/core": "^2.11.6",
        "@stencil/core": "^3.0.0",
        "date-fns": "2.29.3",
        "rxjs": "^7.5.5"
    },
    "devDependencies": {
        "@stencil/angular-output-target": "0.6.0",
        "@stencil/postcss": "2.1.0",
        "@stencil/react-output-target": "0.5.0",
        "@stencil/sass": "3.0.0",
        "@tailwindcss/aspect-ratio": "0.4.2",
        "@tailwindcss/forms": "0.5.3",
        "@tailwindcss/line-clamp": "0.4.2",
        "@tailwindcss/typography": "0.5.9",
        "@types/jest": "29.5.0",
        "concurrently": "7.6.0",
        "jest": "29.5.0",
        "jest-cli": "29.5.0",
        "puppeteer": "19.8.0",
        "stencil-inline-svg": "1.1.0",
        "stencil-tailwind-plugin": "1.7.0",
        "tailwind-scrollbar-hide": "1.1.7",
        "tailwindcss": "3.2.7",
        "workbox-build": "6.5.4"
    },
    "license": "MIT"
}
