{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowUnreachableCode": false,
		"declaration": false,
		"experimentalDecorators": true,
		"lib": ["dom", "es2022", "dom.iterable"],
		"moduleResolution": "bundler",
		"module": "esnext",
		"target": "es2022",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"jsx": "react",
		"jsxFactory": "h",
		"jsxFragmentFactory": "h.Fragment",
		"skipLibCheck": true
	},
	"watchOptions": {
		"excludeFiles": ["**/*.stories.ts"]
	},
	"include": ["src"],
	"exclude": ["node_modules", "../../node_modules", "**/*.stories.ts"]
}
