{
	"name": "@paperless/conventions",
	"description": "Paperless eslint, typescript & prettier recommended configuration",
	"version": "3.2.2",
	"license": "ISC",
	"type": "module",
	"publishConfig": {
		"registry": "https://registry.npmjs.org"
	},
	"exports": {
		".": "./index.js",
		"./prettier": "./.prettierrc.cjs",
		"./eslint": "./eslint.config.js",
		"./editorconfig": "./.editorconfig",
		"./tsconfig": "./tsconfig.json"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Employes/Paperless.git"
	},
	"scripts": {
		"build": "echo 'skipped conventions'",
		"build:prod": "yarn build",
		"prenpm:publish": "cp ../../README.md .",
		"npm:publish": "npm publish",
		"npm:publish:prerelease": "yarn npm:publish --tag alpha",
		"prettier:check": "yarn prettier \"./**/*.{ts,tsx,html,scss,json}\"",
		"prettier:write": "yarn prettier:check -w"
	},
	"dependencies": {
		"@angular-eslint/builder": "~21.0.0",
		"@eslint/js": "~9.39.3",
		"@nx/eslint-plugin": "~22.5.0",
		"@regru/eslint-plugin-prefer-early-return": "~1.0.0",
		"angular-eslint": "~21.0.0",
		"eslint-config-prettier": "~10.1.8",
		"eslint-import-resolver-typescript": "~4.4.4",
		"eslint-plugin-better-tailwindcss": "~4.3.0",
		"eslint-plugin-import": "~2.32.0",
		"eslint-plugin-jsonc": "~2.21.0",
		"eslint-plugin-jsx-a11y": "~6.10.2",
		"eslint-plugin-prettier": "~5.5.5",
		"eslint-plugin-react": "~7.37.5",
		"eslint-plugin-react-hooks": "~7.0.1",
		"eslint-plugin-unicorn": "~63.0.0",
		"nx": "~22.5.0",
		"typescript-eslint": "~8.56.0"
	},
	"peerDependencies": {
		"eslint": "~9.39.3",
		"prettier": "~3.8.1",
		"typescript": "5.8.3"
	}
}
