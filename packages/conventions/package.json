{
	"name": "@paperless/conventions",
	"description": "Paperless eslint, typescript & prettier recommended configuration",
	"version": "2.22.0-alpha.48",
	"license": "ISC",
	"type": "module",
	"publishConfig": {
		"registry": "https://registry.npmjs.org"
	},
	"exports": {
		".": "./index.js",
		"./prettier": "./.prettierrc.cjs",
		"./eslint": "./eslint.config.js",
		"./editorconfig": "./.editorconfig",
		"./tsconfig": "./tsconfig.json"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Employes/Paperless.git"
	},
	"scripts": {
		"build": "echo 'skipped conventions'",
		"build:prod": "yarn build",
		"prenpm:publish": "cp ../../README.md .",
		"npm:publish": "npm publish",
		"npm:publish:prerelease": "yarn npm:publish --tag alpha",
		"prettier:check": "yarn prettier \"./**/*.{ts,tsx,html,scss,json}\"",
		"prettier:write": "yarn prettier:check -w"
	},
	"dependencies": {
		"@angular-eslint/builder": "~19.0.0",
		"@eslint/js": "~9.39.1",
		"@nx/eslint-plugin": "~22.3.3",
		"@regru/eslint-plugin-prefer-early-return": "~1.0.0",
		"angular-eslint": "~19.0.0",
		"eslint-config-prettier": "~10.1.8",
		"eslint-import-resolver-typescript": "~4.4.4",
		"eslint-plugin-import": "~2.32.0",
		"eslint-plugin-jsonc": "~2.21.0",
		"eslint-plugin-jsx-a11y": "~6.10.2",
		"eslint-plugin-prettier": "~5.5.4",
		"eslint-plugin-react": "~7.37.5",
		"eslint-plugin-react-hooks": "~7.0.1",
		"eslint-plugin-unicorn": "~62.0.0",
		"nx": "~22.3.3",
		"typescript-eslint": "~8.46.4"
	},
	"peerDependencies": {
		"eslint": "~9.39.1",
		"prettier": "~3.7.4",
		"typescript": "5.8.3"
	}
}
