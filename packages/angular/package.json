{
    "name": "@paperless/angular",
    "version": "0.1.0-alpha.306",
    "scripts": {
        "ng": "ng",
        "set-version": "cd projects/paperless && yarn version --new-version=$(node -p \"require('../../package.json').version\") --no-git-tag-version",
        "start": "ng serve",
        "prebuild": "yarn",
        "build": "ng build",
        "postbuild": "yarn tailwind:process",
        "prebuild:prod": "yarn set-version",
        "build:prod": "ng build --configuration production",
        "postbuild:prod": "yarn tailwind:process",
        "tailwind:process": "tailwindcss -c ./projects/paperless/tailwind.config.js -i projects/paperless/src/paperless.scss -o dist/paperless.css",
        "watch": "ng build --watch --configuration development",
        "test": "ng test",
        "preyarn:publish": "cp ../../README.md ./dist/",
        "yarn:publish": "yarn publish ./dist  --access=public",
        "pb:serve": "ng serve --project=playground --host=0.0.0.0 --disable-host-check"
    },
    "dependencies": {
        "@angular/animations": "15.0.3",
        "@angular/cdk": "15.0.2",
        "@angular/common": "15.0.3",
        "@angular/compiler": "15.0.3",
        "@angular/core": "15.0.3",
        "@angular/forms": "15.0.3",
        "@angular/platform-browser": "15.0.3",
        "@angular/platform-browser-dynamic": "15.0.3",
        "@angular/router": "15.0.3",
        "@ngneat/until-destroy": "9.2.2",
        "rxjs": "7.6.0",
        "tslib": "2.4.1",
        "zone.js": "0.12.0"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "15.0.3",
        "@angular/cli": "15.0.3",
        "@angular/compiler-cli": "15.0.3",
        "@types/jasmine": "4.3.1",
        "@types/node": "18.11.15",
        "autoprefixer": "10.4.13",
        "jasmine-core": "4.5.0",
        "karma": "6.4.1",
        "karma-chrome-launcher": "3.1.1",
        "karma-coverage": "2.2.0",
        "karma-jasmine": "5.1.0",
        "karma-jasmine-html-reporter": "2.0.0",
        "ng-packagr": "15.0.3",
        "postcss": "8.4.20",
        "tailwindcss": "3.2.4",
        "typescript": "4.8.2"
    }
}
